    </style>
-->
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/BlueGreyDarkPrimary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/BlueGreyDarkPrimary</item>
    </style>




    <style name="AppButton">

        <item name="android:textColor">@color/PrimaryText</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/BlueGreyLightPrimary</item>

    </style>

    <style name="CapstoneButton" parent="AppButton">
        <item name="android:background">@color/TealAccent</item>
        <item name="android:textColor">@color/White</item>
    </style>

</resources>
